<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgEquipo1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:minWidth="100dp"
                android:minHeight="100dp"
                android:src="@drawable/descansa" />

            <TextView
                android:id="@+id/txtEquipo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="16sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/txtResultado"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="-"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imgEquipo2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:minWidth="100dp"
                android:minHeight="100dp"
                android:src="@drawable/descansa" />

            <TextView
                android:id="@+id/txtEquipo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Descansa"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/txtFechaHora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="02/03/2024  10:45"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/location"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtCampo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usansolo" />
    </LinearLayout>




</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/inscripcion"
    tools:context=".ui.InscripcionFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <Button
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:id="@+id/btn_pdf1"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:text="Normativa1"
                app:strokeColor="@color/C2"
                app:strokeWidth="3dp"
                app:cornerRadius="8dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>


            <Button
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:id="@+id/btn_pdf2"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:text="Normativa2"
                app:strokeColor="@color/C2"
                app:strokeWidth="3dp"
                app:cornerRadius="8dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>
            <Button
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:id="@+id/btn_pdf3"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:text="Normativa3"
                app:strokeColor="@color/C2"
                app:strokeWidth="3dp"
                app:cornerRadius="8dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_infoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dip"
            android:text="Necesitaras \n - Nombre \n - Apellidos \n - Foto \n - E-mail \n - Empadronamiento \n - Diploma deportivo"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/tv_infoText2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:text="Cuando tenga todo lo anterior, puede continuar con la inscripciÃ³n."
            android:textSize="20dp" />

        <Button
            style="@style/AppButton"
            android:id="@+id/btn_next"
            android:layout_gravity="center_horizontal"
            android:text="Siguiente" />

    </LinearLayout>
</LinearLayout>




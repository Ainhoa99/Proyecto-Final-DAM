<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1dp"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/layoutPartidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>
    </ScrollView>

    <!-- Buttons -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/prueba"
            style="@style/AppButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/jugadora_prueba"
            android:scaleType="fitCenter"
            android:layout_marginLeft="5dp"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/contacto"
            style="@style/AppButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/servicio_al_cliente"
            android:scaleType="fitCenter"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="0dp"
            android:text="Contacto"/>

        <!--<ImageView
            android:id="@+id/contactoimg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/contacto" />-->


    </LinearLayout>


    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="78dp"
        android:autoStart="true"
        android:flipInterval="2000"
        android:inAnimation="@android:anim/slide_in_left"
        android:outAnimation="@android:anim/slide_out_right">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/patrocinadores_bien1" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/patrocinadores_bien2" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/patricinadores_bien3" />
    </ViewFlipper>


</LinearLayout>




